@{
  ViewData["Title"] = "Delete Record";
}

@model Student;

<h1 class="text-danger">Are you sure you want to delete this record?</h1>

<table class="table">
  <tbody>
    <tr>
      <th>Name</th>
      <td>@Model.FirstName @Model.LastName</td>
    </tr>
    <tr>
      <th>Birthdate</th>
      <td>@Model.Birthdate</td>
    </tr>
    <tr>
      <th>Email</th>
      <td>@Model.Email</td>
    </tr>
    <tr>
      <th>Major</th>
      <td>@Model.Major</td>
    </tr>
  </tbody>
</table>

<form asp-action="DeletePost" method="post">
  <div class="mt-3">
    <button type="submit" class="btn btn-danger delete-btn" asp-controller="Student" asp-action="DeletePost"
      asp-route-id="@Model.Id">Delete</button>
    <button type="submit" class="btn btn-secondary cancel-btn" asp-controller="Student" asp-action="DeletePost"
      asp-route-id="-1">Cancel</button>
  </div>
</form>