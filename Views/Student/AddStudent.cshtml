@{
  ViewData["Title"] = "Add Student";
}

@model Student;

<form asp-action="AddStudent" method="post">
  <div class="mb-3">
    <label asp-for="FirstName" class="form-label">First name</label>
    <input required asp-for="FirstName" class="form-control" />
  </div>
  <div class="mb-3">
    <label asp-for="LastName" class="form-label">Last name</label>
    <input required asp-for="LastName" class="form-control" />
  </div>
  <div class="mb-3">
    <label asp-for="Birthdate" class="form-label">Birthdate</label>
    <input required asp-for="Birthdate" type="date" class="form-control" />
  </div>
  <div class="mb-3">
    <label asp-for="Email" class="form-label">Email</label>
    <input required asp-for="Email" type="email" class="form-control" />
  </div>
  <div class="mb-3">
    <label asp-for="Major" class="form-label">Major</label>
    <select required asp-for="Major" asp-items="Html.GetEnumSelectList<Major>()" class="form-control"></select>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
