@{
  ViewData["Title"] = "Delete Record";
}

@model Instructor;

<h1 class="text-danger">Are you sure you want to delete this record?</h1>

<table class="table">
  <tboyd>
    <tr>
      <th>Name</th>
      <td>@Model.FirstName @Model.LastName</td>
    </tr>
    <tr>
      <th>Tenured</th>
      <td>@Model.IsTenured</td>
    </tr>
    <tr>
      <th>Rank</th>
      <td>@Model.Rank</td>
    </tr>
    <tr>
      <th>Hiring Date</th>
      <td>@Model.HiringDate</td>
    </tr>
  </tboyd>
</table>

<form asp-action="DeletePost" method="post" class="delete-form">
  <div class="mt-3">
    <button type="submit" class="btn btn-danger delete-btn" asp-controller="Instructor" asp-action="DeletePost"
      asp-route-id="@Model.Id">Delete</button>
    <button type="submit" class="btn btn-secondary cancel-btn" asp-controller="Instructor" asp-action="DeletePost"
      asp-route-id="-1">Cancel</button>
  </div>
</form>
